{
  "name": "@ollimartin/iobroker.acaad",
  "version": "0.0.1",
  "description": "Allows to turn any computer (windows, linux, mac) into a smart device.",
  "author": {
    "name": "OlliMartin",
    "email": "dev@ollimart.in"
  },
  "homepage": "https://github.com/OlliMartin/ioBroker.acaad",
  "license": "AGPL-3.0",
  "keywords": [
    "windows",
    "mac",
    "linux",
    "windows control",
    "linux control"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/OlliMartin/ioBroker.acaad.git"
  },
  "engines": {
    "node": ">= 20"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.2.3",
    "@iobroker/dev-server": "workspace:*"
  },
  "devDependencies": {
    "@iobroker/adapter-dev": "^1.3.0",
    "@iobroker/testing": "^5.0.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/chai-as-promised": "^7.1.8",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.17.11",
    "@types/proxyquire": "^1.3.31",
    "@types/sinon": "^17.0.3",
    "@types/sinon-chai": "^3.2.12",
    "chai-as-promised": "^7.1.2",
    "chai": "^4.5.0",
    "mocha": "^11.0.1",
    "proxyquire": "^2.1.3",
    "rimraf": "^6.0.1",
    "sinon": "^19.0.2",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "~5.0.4"
  },
  "main": "build/main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*|.eslintrc).{json,json5}",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "build/",
    "www/",
    "io-package.json",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rimraf build",
    "build": "build-adapter ts",
    "watch": "build-adapter ts --watch",
    "prebuild:ts": "rimraf build",
    "build:ts": "build-adapter ts",
    "watch:ts": "build-adapter ts --watch",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "check": "tsc --noEmit",
    "translate": "translate-adapter",
    "ds:setup": "iobroker-dev-server setup -l",
    "ds:watch": "iobroker-dev-server setup --symlinks"
  },
  "bugs": {
    "url": "https://github.com/OlliMartin/ioBroker.acaad/issues"
  },
  "readmeFilename": "README.md"
}
