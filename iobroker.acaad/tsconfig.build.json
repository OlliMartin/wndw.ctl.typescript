// Specialized tsconfig to only compile .ts-files in the src dir
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "noEmit": false,
    "declaration": false,
    "strict": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.cts"
  ],
  "exclude": [
    "src/**/*.test.ts"
  ]
}
