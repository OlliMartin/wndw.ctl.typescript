{
  "root": true,
  "parser": "@typescript-eslint/parser",
  // Specifies the ESLint parser
  "parserOptions": {
    "ecmaVersion": "latest",
    // Allows for the parsing of modern ECMAScript features
    "sourceType": "module",
    // Allows for the use of imports
    "project": "./tsconfig.json"
  },
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "indent": [
      "error",
      4,
      {
        "SwitchCase": 1
      }
    ],
    "no-console": "off",
    "no-unused-vars": [
      "error",
      {
        "ignoreRestSiblings": true,
        "argsIgnorePattern": "^_"
      }
    ],
    "no-var": "error",
    "no-trailing-spaces": "error",
    "prefer-const": "error",
    "quotes": [
      "error",
      "double",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}
